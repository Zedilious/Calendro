<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="MemoryGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:id="@+id/mg"
        android:textStyle="normal|bold"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="90dip"
        android:layout_height="90dip"
        app:srcCompat="@drawable/common_full_open_on_phone"
        android:id="@+id/but4"
        android:layout_alignTop="@+id/but3"
        android:layout_alignLeft="@+id/but2"
        android:layout_alignStart="@+id/but2"
        android:onClick="onClick"/>

    <ImageButton
        android:layout_width="90dip"
        android:layout_height="90dip"
        app:srcCompat="@drawable/common_full_open_on_phone"
        android:id="@+id/but7"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/but5"
        android:layout_alignLeft="@+id/but5"
        android:layout_alignStart="@+id/but5"
        android:onClick="onClick"/>

    <ImageButton
        android:layout_width="90dip"
        android:layout_height="90dip"
        app:srcCompat="@drawable/common_full_open_on_phone"
        android:id="@+id/but8"
        android:layout_alignTop="@+id/but7"
        android:layout_alignLeft="@+id/but6"
        android:layout_alignStart="@+id/but6"
        android:onClick="onClick"/>

    <ImageButton
        android:layout_width="90dip"
        android:layout_height="90dip"
        app:srcCompat="@drawable/common_full_open_on_phone"
        android:id="@+id/but3"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/but1"
        android:layout_alignLeft="@+id/but1"
        android:layout_alignStart="@+id/but1"
        android:onClick="onClick"/>

    <ImageButton
        android:layout_width="90dip"
        android:layout_height="90dip"
        app:srcCompat="@drawable/common_full_open_on_phone"
        android:id="@+id/but5"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/but3"
        android:layout_alignLeft="@+id/but3"
        android:layout_alignStart="@+id/but3"
        android:onClick="onClick"/>

    <ImageButton
        android:layout_width="90dip"
        android:layout_height="90dip"
        app:srcCompat="@drawable/common_full_open_on_phone"
        android:id="@+id/but6"
        android:layout_alignTop="@+id/but5"
        android:layout_alignLeft="@+id/but4"
        android:layout_alignStart="@+id/but4"
        android:onClick="onClick"/>

    <ImageButton
        android:layout_width="90dip"
        android:layout_height="90dip"
        app:srcCompat="@drawable/common_full_open_on_phone"
        android:id="@+id/but1"
        android:layout_marginTop="18dp"
        android:layout_marginRight="22dp"
        android:layout_marginEnd="22dp"
        android:layout_below="@+id/mg"
        android:layout_toLeftOf="@+id/but6"
        android:layout_toStartOf="@+id/but6"
        android:onClick="onClick"/>

    <ImageButton
        android:layout_width="90dip"
        android:layout_height="90dip"
        app:srcCompat="@drawable/common_full_open_on_phone"
        android:id="@+id/but2"
        android:layout_alignTop="@+id/but1"
        android:layout_alignLeft="@+id/mg"
        android:layout_alignStart="@+id/mg"
        android:layout_marginLeft="88dp"
        android:layout_marginStart="88dp"
        android:onClick="onClick"/>

    <TextView
        android:text="Score: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/score"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/but7"
        android:layout_alignStart="@+id/but7"
        android:layout_marginBottom="37dp"
        android:onClick="onClick"/>

    <Button
        android:text="Play Again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:id="@+id/again"
        android:layout_alignBaseline="@+id/score"
        android:layout_alignBottom="@+id/score"
        android:layout_alignLeft="@+id/but8"
        android:layout_alignStart="@+id/but8"
        android:onClick="onClick"/>

</RelativeLayout>
